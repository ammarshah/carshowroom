.container
  
  %br
  %div.car-image
    - @photos.each do |p|
      = image_tag p.image_url(:thumb)
  %p
    .label.label-primary Make
    = @car.car_make
  %p
    .label.label-primary Model
    = @car.car_model
  %p
    .label.label-primary Version
    = @car.car_version
  %p
    .label.label-primary Year
    = @car.car_year
  %p
    .label.label-primary City
    = @car.car_city
  %p
    .label.label-primary Mileage
    = @car.car_mileage
  %p
    .label.label-primary Price
    = @car.car_price
  %p
    .label.label-primary Transmission
    = @car.car_trans
  %p
    .label.label-primary Description
    = @car.car_desc
  %p
    .label.label-primary Type
    = @car.car_type
  %p

  = link_to 'Edit', edit_car_path(@car)
  \|
  = link_to 'Back', cars_all_path
