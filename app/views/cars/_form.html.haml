= simple_form_for(@car, :html => { :multipart => true}) do |f|
  = f.error_notification

  .form-inputs
    
    = f.label 'Make'
    %p
    = f.text_field :car_make
    %p
    = f.label 'Model'
    %p
    = f.text_field :car_model
    %p
    = f.label 'Version'
    %p
    = f.text_field :car_version
    %p
    = f.label 'Year'
    %p
    = f.text_field :car_year
    %p
    = f.label 'City'
    %p
    = f.text_field :car_city
    %p
    = f.label 'Mileage'
    %p
    = f.text_field :car_mileage
    %p
    = f.label 'Price'
    %p
    = f.text_field :car_price
    %p
    = f.label 'Transmission'
    %p
    = f.text_field :car_trans
    %p
    = f.label 'Type'
    %p
    = f.text_field :car_type
    %p
    = f.label 'Description'
    %p
    = f.text_area :car_desc
    %p
  = f.fields_for :photos do |p|
    = p.label 'Add Photos'
    %p
    = p.file_field :image, :multiple => true, name: "photos[image][]"
    %p
    
  .form-actions
    = f.submit 'Save', :class => "btn btn-primary"