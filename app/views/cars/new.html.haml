.container
  %h1 Add Cars
  = simple_form_for @car, :html => {:class => 'form-horizontal' } do |f|
    = f.input :car_type, :required => true
    = f.input :make, :required => true
    = f.input :model, :required => true
    = f.input :version, :required => true
    
    .form-actions
      = f.button :submit, 'Submit', :class=> "btn btn-primary"